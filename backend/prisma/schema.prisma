generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  // Optional profile fields
  avatar        String?
  bio           String?
  joinDate      DateTime? @default(now())
  readingProgress Json?
  bookClubs     Json?
  friends       Int? @default(0)

  @@map("users")
}

